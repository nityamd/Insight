{
  "manifest_version": 2,

  "name": "YouTopia",
  "description": "Giving kids the Ideal YouTube Experience",
  "version": "1.0",

  "icons": {
    "48": "icon_hobbes.png"
  },

  "permissions": [
    "tabs",
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"]
    }
  ]

  "browser_action": {
    "default_icon": "icon_hobbes.png",
    "default_popup": "popup.html"
  }
}
